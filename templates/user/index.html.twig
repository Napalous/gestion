{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<div class="container">
		<a class="btn btn-primary" href="{{ path('user_new') }}">Nouveau Utilisateur<br/></a>

		<table id="example" class="table table-striped table-bordered" style="width:100%">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Prenom</th>
					<th>Tel</th>
					<th>Roles</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.nom }}</td>
						<td>{{ user.prenom }}</td>
						<td>{{ user.tel }}</td>
						<td>{{ user.roles ? user.roles[0]|slice(5)|replace({"_": ' '})}}</td>
						<td>
							<a class="btn btn-primary" href="{{ path('user_show', {'id': user.id}) }}"><ion-icon name="eye-outline"></ion-icon></a>
							<a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}"><ion-icon name="pencil-outline"></ion-icon></a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endblock %}
