{% extends 'base.html.twig' %}

{% block title %}Site index{% endblock %}

{% block body %}
	<div class="container">
        <div>
		    <a class="btn btn-primary" href="{{ path('site_new') }}">Nouvelle Configuration</a>
        </div>
        <br/>
		<table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Logo</th>
                <th>Adresse</th>
                <th>Tel</th>
                <th>Email</th>
                <th>Ninea</th>
                <th>Registre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td>{{ site.nom }}</td>
                <td><img src="{{ asset('uploads/')}}{{  site.logo}}" style="height:50px"/></td>
                <td>{{ site.adresse }}</td>
                <td>{{ site.tel }}</td>
                <td>{{ site.email }}</td>
                <td>{{ site.ninea }}</td>
                <td>{{ site.registre }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('site_show', {'id': site.id}) }}"><ion-icon name="eye-outline"></ion-icon></a>
                    <a class="btn btn-danger" href="{{ path('site_edit', {'id': site.id}) }}"><ion-icon name="pencil-outline"></ion-icon></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucune Configuration</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
