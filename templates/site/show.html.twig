{% extends 'base.html.twig' %}

{% block title %}Site{% endblock %}

{% block body %}
<div class="container">
    <h1>Site</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ site.nom }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td><img src="{{ asset('uploads/')}}{{  site.logo}}" style="height:100px"/></td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ site.adresse }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ site.tel }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ site.email }}</td>
            </tr>
            <tr>
                <th>Ninea</th>
                <td>{{ site.ninea }}</td>
            </tr>
            <tr>
                <th>Registre</th>
                <td>{{ site.registre }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('site_index') }}">La configuration</a>    
    <div>
    <br/>
    <a class="btn btn-warning" href="{{ path('site_edit', {'id': site.id}) }}">Editer</a>
    <br/>
    </div>
    {{ include('site/_delete_form.html.twig') }}
</div>
{% endblock %}
